<operator>
  <name>org.esa.snap.core.gpf.operators.tooladapter.sen2vm</name>
  <operatorClass>org.esa.snap.core.gpf.operators.tooladapter.ToolAdapterOp</operatorClass>
  <alias>sen2vm-snap-plugin</alias>
  <label>geo localization</label>
  <version>1.0.0</version>
  <description>Sentinel-2 Viewing Model tool goal is to compute and add geolocation information to L1B product images</description>
  <authors>CSGroup</authors>
  <copyright></copyright>
  <internal>false</internal>
  <autoWriteSuppressed>false</autoWriteSuppressed>
  <menuLocation>Menu/Optical/Geometric</menuLocation>
  <preprocessTool>false</preprocessTool>
  <writeForProcessing>false</writeForProcessing>

  <mainToolFileLocation>$SEN2VM_JRE</mainToolFileLocation>

<!-- 08.24 Bug in Snap Plugin : need to use SEN2VM_PLUGIN_DIR instead of SEN2VM_HOME
  <workingDir>$SEN2VM_HOME</workingDir>
-->
  <workingDir>$SEN2VM_PLUGIN_DIR</workingDir>

  <template type="file">
    <file>sen2vm-snap-plugin-template.vm</file>
  </template>

  <variables>

    <variable>
      <key>SEN2VM_PLUGIN_DIR</key>
<!--
      <value>$USER_HOME/.snap/auxdata/sen2vm-snap-plugin</value>
-->
      <value>$USER_HOME/.snap/auxdata</value>
      <isShared>false</isShared>
    </variable>

    <variable>
      <key>SEN2VM_HOME</key>
      <value>$USER_HOME/.snap/var/cache/</value>
      <isShared>false</isShared>
    </variable>

    <osvariable>
      <key>SEN2VM_JRE</key>
      <value>$USER_HOME/esa-snap/jre/bin/java</value>
      <isShared>false</isShared>
      <windows></windows>
      <linux>$USER_HOME/Tools/esa-snap/jre/bin/java</linux>
      <macosx></macosx>
      <isTransient>false</isTransient>
    </osvariable>

    <osvariable>
      <key>SEN2VM_JAR</key>
      <value>$SEN2VM_PLUGIN_DIR/sen2vm-snap-plugin/sen2vm-core-0.0.1-SNAPSHOT.jar</value>
      <isShared>false</isShared>
      <windows></windows>
      <linux>$SEN2VM_PLUGIN_DIR/sen2vm-snap-plugin/sen2vm-core-0.0.1-SNAPSHOT.jar</linux>
      <macosx></macosx>
      <isTransient>false</isTransient>
    </osvariable>

    <osvariable>
      <key>USERPROFILE</key>
      <value></value>
      <isShared>false</isShared>
      <windows></windows>
      <linux>$HOME</linux>
      <macosx>$HOME</macosx>
      <isTransient>false</isTransient>
    </osvariable>

    <osvariable>
      <key>HOME</key>
      <value>$USERPROFILE</value>
      <isShared>false</isShared>
      <windows>$USERPROFILE</windows>
      <linux></linux>
      <macosx></macosx>
      <isTransient>false</isTransient>
    </osvariable>

    <osvariable>
      <key>USER_HOME</key>
      <value>$USERPROFILE</value>
      <isShared>false</isShared>
      <windows>$USERPROFILE</windows>
      <linux>/home/guylaine</linux>
      <macosx>$HOME</macosx>
      <isTransient>false</isTransient>
    </osvariable>
  </variables>

  <parameters>

       <parameter>
           <name>configurationFile</name>
            <dataType>java.io.File</dataType>
            <description>Configuration file</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
       </parameter>
       <parameter>
           <name>parametersFile</name>
            <dataType>java.io.File</dataType>
            <description>Parameters file</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
       </parameter>

       <parameter>
            <name>operation</name>
            <dataType>java.lang.String</dataType>
            <description>Type of operation</description>
            <valueSet>
                <string>direct</string>
                <string>inverse</string>
            </valueSet>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

       <parameter>
            <name>L1B</name>
            <dataType>java.io.File</dataType>
            <defaultValue/>
            <description>Path to L1B product folder</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>FolderParameter</parameterType>
       </parameter>
       <parameter>
            <name>GIPP</name>
            <dataType>java.io.File</dataType>
            <defaultValue/>
            <description>Path to GIPP folder</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>FolderParameter</parameterType>
        </parameter>

        <parameter>
            <name>dem</name>
            <dataType>java.io.File</dataType>
            <defaultValue/>
            <description>Path to DEM folder</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>FolderParameter</parameterType>
        </parameter>
        <parameter>
           <name>geoid</name>
            <dataType>java.lang.String</dataType>
            <description>Path to GEOID file</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

       <parameter>
            <name>step10</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>Steps (pixels) for bands 10m</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
       </parameter>
       <parameter>
            <name>step20</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>Steps (pixels) for bands 20m</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
       <parameter>
            <name>step60</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>Steps (pixels) for bands 60m</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

        <!-- Compulsory parameter for inverse location-->
         <parameter>
            <name>output_folder</name>
            <dataType>java.lang.String</dataType>
            <description>(compulsory for inverse loc) output folder</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

        <parameter>
            <name>referential</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>(compulsory for inverse loc) referential</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>lrx</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>(compulsory for inverse loc) Lower Right X (referential unit)</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>lry</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>(compulsory for inverse loc) Lower Right Y (referential unit)</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>ulx</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>(compulsory for inverse loc) Upper Left X (referential unit)</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>uly</name>
            <dataType>java.lang.String</dataType>
            <defaultValue/>
            <description>(compulsory for inverse loc) Upper Left Y (referential unit)</description>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

        <!-- Optional parameter -->
        <parameter>
            <name>iers</name>
            <dataType>java.lang.String</dataType>
            <description>(optional) Path to IERS file</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>not_gipp</name>
            <dataType>java.lang.Boolean</dataType>
            <description>(optional) Deactivate the check of GIPP version; if select= "true", if not= "false"</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>not_refining</name>
            <dataType>java.lang.Boolean</dataType>
            <description>(optional) Deactivate the refining; if select= "true", if not= "false"</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>alt</name>
            <dataType>java.lang.Boolean</dataType>
            <description>(optional) Export altitude in direct location grid; if select= "true", if not= "false".</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>
        <parameter>
            <name>pod</name>
            <dataType>java.lang.String</dataType>
            <description>(optional) Path to POD file/folder</description>
            <defaultValue/>
            <notNull>false</notNull>
            <notEmpty>false</notEmpty>
            <parameterType>RegularParameter</parameterType>
        </parameter>

    <parameter>
      <name>targetProductFile</name>
      <dataType>java.io.File</dataType>
      <description>Output file</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
    </parameter>

  </parameters>

  <source>user</source>
  <isSystem>false</isSystem>
  <isHandlingOutputName>true</isHandlingOutputName>
  <windowsBundle>
    <bundleType>NONE</bundleType>
    <bundleLocation>REMOTE</bundleLocation>
  </windowsBundle>

  <linuxBundle>
    <bundleType>ZIP</bundleType>

    <bundleLocation>REMOTE</bundleLocation>
    <downloadURL>http://0.0.0.0:8000/sen2vm.zip</downloadURL>
<!--
    <bundleLocation>LOCAL</bundleLocation>
    <source>/home/guylaine/SEN2VM/sen2vm.zip</source>
 -->
    <templateparameter>
      <name>arguments</name>
      <dataType>java.io.File</dataType>
      <valueSet/>
      <parameterType>TemplateParameter</parameterType>
      <parameters>
        <parameter>
          <name>targetLocation</name>
          <dataType>java.io.File</dataType>
          <defaultValue>null</defaultValue>
          <valueSet/>
          <parameterType>RegularParameter</parameterType>
        </parameter>
      </parameters>
      <template type="simple"/>
      <outputFile>Command Template</outputFile>
    </templateparameter>
    <targetLocation>$HOME/.snap/auxdata</targetLocation>
    <entryPoint>senv2vm.zip</entryPoint>
    <updateVariable>SEN2VM_PLUGIN_DIR</updateVariable>
  </linuxBundle>

  <macosxBundle>
    <bundleType>NONE</bundleType>
    <bundleLocation>REMOTE</bundleLocation>
  </macosxBundle>

  <sourceProductDescriptors/>
  <targetPropertyDescriptors/>
  <numSourceProducts>0</numSourceProducts>
  <templateType>VELOCITY</templateType>
</operator>
